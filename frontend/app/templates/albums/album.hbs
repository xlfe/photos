<div class="container-fluid edge-to-edge">
    <div class="your-photos">

        {{#each folder in model.photos.folders}}
            {{photo-grid-folder folder=folder album=controller.model}}
        {{/each}}

        {{#each photo in model.photos.filtered_arrangedContent}}
            {{photo-grid-photo photo=photo album=controller.model save="save"}}
        {{/each}}

        {{#unless model.photos.folders}}
            {{#unless model.photos.filtered_arrangedContent}}

                <div class="box-middle-center">
                <span>
                    No photos found - would you like to
                    <a href="#" {{action 'openModalModel' 'upload-modal' model}}>
                        upload some photos</a>?
                </span>
                </div>
            {{/unless}}
        {{/unless}}
    </div>
</div>


