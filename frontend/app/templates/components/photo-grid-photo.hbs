{{#if album.permissions.move}}
    <i class="icon fa fa-check-circle fa-2x" {{action 'selection'}}></i>
{{else if album.permissions.sort}}
    <i class="icon fa fa-check-circle fa-2x" {{action 'selection'}}></i>
{{/if}}


