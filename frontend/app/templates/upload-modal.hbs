{{#modal-base
    model=model
    save='save'
    close='close'
    custom_save=controller.save_caption
    save_disabled=controller.save_disabled
    custom_close=controller.close_caption
    toggle=toggle
    toggleVal='toggleVal'
    closeModal='closeModal'
}}

    <div class="upload">

        {{#each controller.files as |file|}}

            <div class="file">
                <div class="progress" style={{file.progress}}></div>

                <div class="name">
                    {{file.name}}
                </div>

                <div class="status">
                    {{file.status}}
                </div>

                <div class="size">
                    {{file.hSize}}
                </div>
            </div>


        {{/each}}

        {{#unless controller.uploading}}

            <div class="hint-pos">

                {{#unless controller.files}}
                    <label class="hint">Drop
                        {{#if accept_folders}}
                            folders
                        {{else}}
                            files
                        {{/if}}
                        here (or click to browse)
                    </label>
                {{/unless}}

            </div>

            {{#if accept_folders}}
                <input type="file" id="file_input" directory webkitdirectory/>
            {{else}}
                <input type="file" id="file_input" accept="image/*" multiple/>
            {{/if}}
        {{/unless}}
    </div>

{{/modal-base}}