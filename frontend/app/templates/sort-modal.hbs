{{#modal-base
model=model
title='Sort album'
custom_save="Sort"
custom_close="Cancel"
save='save'
close='close'
closeModal='closeModal'
}}

    <form class="form-horizontal" role="form">

        <div class="form-group">

            <label class="col-sm-2 control-label">
                Sort by
            </label>

            <div class="col-sm-10">

                    {{#each option in view.sortOptions}}

                        <div class="radio">
                          <label>
                              {{input type="radio" name="optionsRadios" value=option.value checked=sort_order}}
                              {{option.name}}
                          </label>
                        </div>

                    {{/each}}
            </div>

        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        {{input type="checkbox" checked=model.sortAscending}} Sort ascending
                    </label>
                </div>
            </div>
        </div>

    </form>

{{/modal-base}}
