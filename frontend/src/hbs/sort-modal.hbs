{{#modal-base model=model title='Select sort options' save='save' close='close' closeModal='closeModal'}}

    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label class="col-sm-2 control-label">Sort by </label>

            <div class="col-sm-10">

                {{view Ember.Select
                    content=model.sortOptions
                    optionValuePath="content.val"
                    optionLabelPath="content.name"
                    value=model.sortProperties
                }}

            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                    {{input type="checkbox" checked=model.sortAscending}} Sort ascending
                </label>
              </div>
            </div>
        </div>

    </form>

{{/modal-base}}
